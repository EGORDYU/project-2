





<script>
   const darkModeSwitch = document.getElementById('dark-mode-switch');
const darkMode = localStorage.getItem('darkMode') === 'true';

console.log('Initial value of darkMode:', darkMode);

if (darkMode) {
  document.body.classList.add('dark-mode');
  document.querySelectorAll('.card').forEach(card => card.classList.add('dark-mode')); // add dark-mode class to all cards
  darkModeSwitch.checked = true;
}

darkModeSwitch.addEventListener('change', () => {
  if (darkModeSwitch.checked) {
    document.body.classList.add('dark-mode');
    document.querySelectorAll('.card').forEach(card => card.classList.add('dark-mode')); // add dark-mode class to all cards
    localStorage.setItem('darkMode', true);
  } else {
    document.body.classList.remove('dark-mode');
    document.querySelectorAll('.card').forEach(card => card.classList.remove('dark-mode')); // remove dark-mode class from all cards
    localStorage.setItem('darkMode', false);
  }

  console.log('Updated value of darkMode:', localStorage.getItem('darkMode') === 'true');
});

  </script>
  
  


<script src="/bootstrap/js/bootstrap.min.js"></script>
