    <style>
        /* Dark mode styles */
        body.dark-mode {
          background-color: #222;
          color: #ffffff;
        }
      </style>

<div class="form-check form-switch">
    <input class="form-check-input" type="checkbox" id="dark-mode-switch">
    <label class="form-check-label" for="dark-mode-switch">Dark Mode</label>
  </div>


    <title>User Auth</title>
</head>
<body>
    

    <nav>
        <ul>
            <!-- shown whether the user is logged in or out-->
            <li><a href="/">Home</a></li>
            <!-- shown when the user is logged in-->
            <% if (user){ %>
                <li><a href="/users/profile">Profile</a></li>
                <li><a href="/users/logout">Logout</a></li>
                <li><a href="/users/conversations">Conversations</a></li>
                <li><a href="/favorites">Favorites</a></li>

           <% } else { %>
            <li><a href="/users/new">Sign up</a></li>
            <li><a href="/users/login">Sign in</a></li>

            <%} %>
            <!-- shown when the user is logged out-->
        </ul>
    </nav>