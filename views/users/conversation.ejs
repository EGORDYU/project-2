<h1>Conversation Details</h1>

<div>
  <h3><%= conversation.prompt %></h3>
  <p><%= conversation.generated_text %></p> <!-- Display generated text -->
  <ul>
    <% responses.forEach(response => { %>
      <li><%= response.message %></li>
    <% }) %>
  </ul>
  <form action="/users/conversation/<%= conversation.id %>" method="POST">
    <label for="response">Response:</label>
    <textarea id="response" name="prompt" required></textarea>
    <br>
    <label for="isConversation">Is part of conversation:</label>
    <select id="isConversation" name="isConversation" required>
      <option value="true">Yes</option>
      <option value="false">No</option>
    </select>
    <br>
    <label for="isFavourite">Is favourite:</label>
    <input type="checkbox" id="isFavourite" name="isFavourite">
    <br>
    <button type="submit">Add Response</button>
  </form>
</div>
